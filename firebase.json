{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "error-pages": [
      {
        "responseCode": 404,
        "file": "/404.html"
      }
    ]
  }
}
